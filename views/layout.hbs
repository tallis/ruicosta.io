			$("#posts_display").append('<h3><a href="'+data[i].link+'">'+posts.stories[i].title+'</a></h3><div id="date">Posted on '+moment(posts.stories[i].date).format("MMMM, DD, YYYY")+'</div>');
		}
		
	});
